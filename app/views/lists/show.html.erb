
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1535016120720-40c646be5580?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container">
    <h1> <%= @list.name %></h1>
  </div>
</div>



<div class="container">
  <%= link_to "Add a movie", new_bookmark_path(@list) %>
</div>

  <div class="movie-card-container d-flex flex-wrap justify-content-between container my-5">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="movie-card ">
      <img src=<%=bookmark.movie.poster_url %> style="width: 100%; height:50%;">
      <div class="container pt-3">
        <div><strong>  <%= bookmark.movie.title %></strong></div>
          <p style="color: grey; font-size:13px;"><%= bookmark.movie.overview %></p>
      <p> <i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>

      </div>

        </div>
  <% end %>
  </div>
